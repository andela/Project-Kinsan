{
    "env": {
        "node": true,
        "es6": true,
        "jasmine": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            2,
            4
        ],
        "quotes": [
            2,
            "double"
        ],
        "semi": [
            2,
            "always"
        ],
        "eqeqeq": [
            2, "allow-null"
        ]
    },
    "parserOptions": {
        "ecmaVersion" : 6,
        "sourceType": "script"
    }
}